<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LivrariaApp"
        tools:targetApi="31">

        <activity
            android:name=".EsqueciSenhaActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="false" />

        <activity
            android:name=".CadastrarUsuarioActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="false" />

        <activity
            android:name=".CadastroLivroActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="false" />

        <activity
            android:name=".EditarLivroActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="false" />

        <activity
            android:name=".DetalheLivroActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="false" />

        <activity
            android:name=".ItemLivroActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="false" />

        <activity
            android:name=".ListarLivrosActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.LivrariaApp"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LivrariaApp" />
    </application>

</manifest>
